# REST Service URLs (Docker internal network)
ORDER_SERVICE_URL=http://rest-order:8001
PAYMENT_SERVICE_URL=http://rest-payment:8002
NOTIFICATION_SERVICE_URL=http://rest-notification:8003

# JSON-RPC Service URLs (Docker internal network)
ORDER_SERVICE_JSONRPC_URL=http://jsonrpc-order:8011
PAYMENT_SERVICE_JSONRPC_URL=http://jsonrpc-payment:8012
NOTIFICATION_SERVICE_JSONRPC_URL=http://jsonrpc-notification:8013

# gRPC Service URLs (Docker internal network)
ORDER_SERVICE_GRPC_URL=grpc-order:8021
PAYMENT_SERVICE_GRPC_URL=grpc-payment:8022
NOTIFICATION_SERVICE_GRPC_URL=grpc-notification:8023

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_ORDER_TOPIC=orders
KAFKA_PAYMENT_TOPIC=payments
KAFKA_NOTIFICATION_TOPIC=notifications

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_ORDER_QUEUE=orders
RABBITMQ_PAYMENT_QUEUE=payments
RABBITMQ_NOTIFICATION_QUEUE=notifications

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/benchmark

# Redis Configuration
REDIS_URL=redis://redis:6379

# Logging
LOG_LEVEL=INFO

# Service Configuration
SERVICE_HOST=0.0.0.0
SERVICE_WORKERS=4

# Docker Resource Limits
CONTAINER_MEM_LIMIT=512m
CONTAINER_CPU_LIMIT=1.0
